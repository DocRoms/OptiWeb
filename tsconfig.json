{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "types": ["vite/client", "node"],
    "lib": ["ESNext", "DOM"]
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"]
}

